<% content_for :head do %>
<title><%= @item.metatitle %></title>
<meta name="description" content="<%= @item.metadescription %>" />
<meta name="keywords" content= "<%= @item.metakeywords %>" />
<% end %>

<% if notice == nil %>
<% else %>
<div id="notice_wrapper">
  <%= @item.title %><%= notice %>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="breadcrums">
        <%= link_to "Каталог", categories_path %> > <%= link_to @item.category.title, @item.category %>
      </div>
    </div>
    <div class="col-lg-8">
      <div class="item-show-title">
        <%# truncate(@item.title, length: 70) %> <p id="not"><%# notice %></p>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="gallery">
        <div class="fotorama" data-nav="thumbs" data-allowfullscreen="native" data-autoplay="3000">
          <%= render @item.photos %>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <p class="item-show-title"><%= truncate(@item.title, length: 55) %></p>
      <p class="item-sku">SKU: <%= @item.sku %></p>
      <p class="item-review">
       <%= link_to 'Читати відгуки', '#review-leave' %> (<%= @item.reviews.where(status: 1).count %>) | <%= link_to 'Залишити відгук',  '#review-leave' %> 
     </p>
     <% if @item.quantity == 0 %>
     <p>Під замовлення (10-14 днів)</p>
     <% elsif @item.quantity < 3 %>
     <p class="item-quantity-one">Товар закінчується</p>
     <% elsif @item.quantity >= 3 %>
     <p class="item-quantity-two">В наявності</p>
     <% end %>
     <p class="item-price">Ціна: <span><%= number_to_currency(@item.price) %></span></p>
<!--
     <p class="item-color">Цвет: Black/Red/White</p>
     <p class="item-size">Size: Y T H M D</p>
   -->
   <div class="buttons-cart">
     <%= button_to 'Додати до кошика', line_products_path(item_id: @item), class: 'btn btn-warning' %> 

     <!-- Button trigger modal -->
     <button type="button" class="one-click-button" data-toggle="modal" data-target="#exampleModal">
      Придбати в один клік
    </button>
  </div>

  <p>Заповніть форму для швидкого оформлення і наш менеджер вам перетелефонує.</p>

  <div class="item-description">
   <p>
     <% if @item.body.nil? %>
     Чекайте на детальну інформацію найближчим часом
     <% else %>
     <%= @item.body.html_safe %>
     <% end %>
   </p>
 </div>
</div>

<div class="col-lg-12">
  <div class="item-description">
   <%= @item.description.html_safe %>
 </div>
</div>
<div class="col-lg-12">
  <div class="trigger-center">
    <h4>Відгуки про <%= @item.title %></h4>
  </div>
</div>
<div class="col-lg-12">

  <div class="reviews-block">
    <% if @item.reviews.where(status: 1).count == 0 %>
    <div class="col-lg-12">
      <div class="trigger-center">
        <p>Відгуків по даному товару ще немає... Станьте першим!</p>
      </div>
    </div>
    <% end %>
    <% @item.reviews.where(status: 1).each do |review| %>
    <div class="col-lg-12">
      <div class="item-reviews">
        <p><strong><%= review.name %></strong>  <strong><%= review.surname %></strong></p>
        <p>
          <%= review.body %> 
          <% if admin_signed_in? %>
          <%= link_to 'Del', [review.item, review], method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </p>
        <div id="review-leave">
        </div>
      </div>
    </div>
    <% end %>
    <%= render 'reviews/form' %>
  </div>
</div>
</div>
</div>


<% if admin_signed_in?  %>
<%= render 'photos/form' %>
<br>
<div class="container">
  <div class="row">

    <% @item.photos.each do |photo|%>
    <div class="col-lg-4">
      <%= image_tag photo.avatar.url %>
      <br>
      <br>
      <%= link_to 'Видалити', [photo.item, photo], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
<% end %>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Форма швидкого замовлення</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="coop-form">
          <p>Деякі відомості про Вас:</p>
          <%= form_for @fastorder do |f| %>
          <%= f.text_field :name, required: true, placeholder: "Ваше ПІБ" %>
          <%= f.text_field :phone, required: true, placeholder: "Номер телефону" %>
          <%= f.text_field :link, required: true, value: @item.id %>
          <%= f.text_area :comment, required: true, placeholder: "Короткий коментар", value: "Я хочу придбати " + @item.title, class: "hidden" %>
          <%=f.submit 'Придбати в один клік', class: "btn btn-primary"  %>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
</div>



<style>
  .fotorama__error {
    background: transparent;
    display: none;
  }
</style>
