<div class="container">
  <div class="row">
    <div class="col-lg-12">
<div class="trigger-center">
  <h1>Замовлення</h1>
</div>
    <table>
        <thead>
          <tr>
            <th>ПІБ</th>
            <th>Адреса</th>
            <th>Номер телефону</th>
            <th>Pay type</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= truncate(order.name, length: 25) %></td>
            <td><%= truncate(order.adress, length: 15) %></td>
            <td><%= order.phone %></td>

            <td>
              <% if order.pay_type == 0 %>
              Приват Банк
              <% else %>
              Наложений
              <% end %>
            </td>
            <td><%= link_to 'Show', order %></td>
            <td><%= link_to 'Edit', edit_order_path(order) %></td>
            <td><%=link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>


            <td>
              <strong>
                <%= order.total_price %>
              </strong>
            </td>
          </tr>
          <strong>
          </strong>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>


<%= link_to 'New Order', new_order_path %>
