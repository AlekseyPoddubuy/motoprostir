<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h2>Товари на сайті:</h2>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ПІБ</th>
                    <th>Адреса</th>
                    <th>Номер телефону</th>
                    <th>Спосіб оплати</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                  <tr>
                    <td><%= truncate(order.name, length: 25) %></td>
                    <td><%= truncate(order.adress, length: 15) %></td>
                    <td><%= order.phone %></td>
                    <td>
                      <% if order.pay_type == 0 %>
                      Приват Банк
                      <% else %>
                      Наложений
                      <% end %>
                    </td>
                    <td>
                      <div class="dropdown">
                        <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          Функції
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                          <%= link_to 'Переглянути', order, class: "dropdown-item" %>
                          <%= link_to "Редагувати", edit_order_path(order), class: "dropdown-item" %>
                          <%= link_to 'Видалити', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                        </div>
                      </div>
                    </td>
                    <td>
                      <strong>
                        <%= order.total_price %>
                      </strong>
                    </td>
                  </tr>
                  <strong>
                  </strong>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>