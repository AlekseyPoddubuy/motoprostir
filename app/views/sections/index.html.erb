<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h2>Розділи для новин</h2>
            <%= link_to "Додати розділ", new_section_path, class: 'btn btn-primary' %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>
                      Назва розділу
                    </th>
                    <th>
                      Slug
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% @sections.each do |section| %>
                  <tr>
                    <td><%= section.title %></td>
                    <td><%= section.slug %></td>
                    <td><%= link_to 'Показати', section %></td>
                    <td><%= link_to 'Редагувати', edit_section_path(section) %></td>
                    <td><%= link_to 'Видалити', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>