<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h2>Товари на сайті:</h2>
            <%= link_to "Додати категорію", new_category_path, class: 'btn btn-primary' %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>
                      Назва статті
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% @posts.each do |post| %>
                  <tr>
                    <td><%= post.title %></td>
                    <td><%= link_to 'Показати', post %></td>
                    <td><%= link_to 'Редагувати', edit_post_path(post) %></td>
                    <td><%= link_to 'Видалити', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>