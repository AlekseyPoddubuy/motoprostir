<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= simple_form_for(@bikepost) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :title, label: false, placeholder: 'Назва закладу' %>
        <%= f.input :address, label: false, placeholder: 'Адреса, координати гугл мапс, як доїхати та інше..' %>
        <%= f.input :description, label: false, placeholder: 'Короткий опис про власника, місця, ціни' %>
        <%= f.input :oblast, label: false, placeholder: 'Тут будуть області' %>
        <%= f.input :city, label: false, placeholder: 'Тут будуть міста' %>
        <% if admin_signed_in? %>
        <%= f.select :status, options_for_select([["Підтвердити", 1]]) %>
        <% end %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <% end %>
    </div>
  </div>
</div>