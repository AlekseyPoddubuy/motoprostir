<header>
	<div class="container">
		<div class="row">
			<div class="col-lg-2 col-sm-3 col-12">
				<div class="logo">
					<%= link_to (image_tag 'logo-m.png'), root_path %>
				</div>
			</div>
			<div class="col-lg-10 col-sm-9 col-12">
				<div class="drop-menu d-lg-none" style="">
				</div>			
				<button class="drop-menu d-lg-none">
					<i class="fa fa-align-justify" aria-hidden="true"></i>
				</button>
				<div class="menu">
					<ul>
						<li><%= link_to 'Головна', root_path %></li>
						<li><%= link_to 'Каталог товарів', categories_path %></li>
						<li><%= link_to 'Партнерство', cooperation_path %></li>
						<li><%= link_to 'Motoprostir | Блог', posts_path %></li>
						<% if @cart == nil %>
						<li class="cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i> <%= link_to 'порожній', categories_path %></li>						
						<% else %>
						<li>
							<%= link_to (cart_path(@cart)), class: "cart" do %>
							<i class="fa fa-shopping-cart" aria-hidden="true"></i> 
							<span class="badge badge-success"><%= (@cart.total_quantity) %></span> 
							товар
							<% end %>
						</li>
						<% end %>
						<li>
							<%= form_for @search do |f| %>
							<%= f.text_field :keywords, placeholder: ' Наприклад: Лампочка', data: { autocomplete_source: Item.order(:title).map(&:title)}   %>
							<%= f.submit '', class: 'lupa' %>
							<% end %>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</header>
