<div class="container">
  <div class="row">
    

        <% @reviews.where(status: 1).each do |review| %>
        <div class="col-lg-6 col-md-6">
          <div class="item-reviews">
            <div class="row">

              <div class="col-lg-3">

                <p><strong><%= review.name %></strong>  <strong><%= review.surname %></strong></p>
                <p>
                  <%= image_tag (review.item.avatar.url) %> 
                </p>
              </div>
              <div class="col-lg-8">
                <div class="review-index">
                  <%= review.body %> 
                </div>
              </div>
            </div>
            <div id="review-leave">
            </div>
          </div>
        </div>
        <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <div class="trigger-center">
        <h1>Відгуки наших найкращик клієнтів:</h1>
      </div>
      <div class="reviews-block">

        <% @reviews.where(status: 1).each do |review| %>
        <div class="col-lg-6 col-md-6">
          <div class="item-reviews">
            <div class="row">

              <div class="col-lg-3">

                <p><strong><%= review.name %></strong>  <strong><%= review.surname %></strong></p>
                <p>
                  <%= image_tag (review.item.avatar.url) %> 
                </p>
              </div>
              <div class="col-lg-8">
                <div class="review-index">
                  <%= review.body %> 
                </div>
              </div>
            </div>
            <div id="review-leave">
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<% if admin_signed_in? %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
    <tr>
      <td><%= review.name %></td>
      <td><%= link_to 'Edit', edit_review_path(review) %></td>
      <td>
        <%= link_to 'Del', [review.item, review], method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>


    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<% end %>
