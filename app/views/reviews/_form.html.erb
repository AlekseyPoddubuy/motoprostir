<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="item-reviews">
				<%= form_for([@item,@item.reviews.build]) do |f| %>
				<%= f.text_field :name, placeholder: ' Ваше імя' %>
				<%= f.text_field :surname, placeholder: ' Ваше прізвище' %>
				<br>
				<%= f.text_area :body, placeholder: ' Ваш відгук', class: 'review-text' %>
				<br>
				<%= f.submit value: 'Залишити відгук', class: 'btn btn-primary' %>
				<% end %>
			</div>
		</div>
	</div>
</div>